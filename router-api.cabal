name:                router-api
version:             0.1.0.0
synopsis:            Router API
description:         Please see README.md
homepage:            http://github.com/tittoassini/router-api
license:             BSD3
license-file:        LICENSE
author:              Pasqualino `Titto` Assini
maintainer:          tittoassini@gmail.com
copyright:           Copyright: (c) 2015 Pasqualino `Titto` Assini
category:            Data
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.BitVector,Data.Pattern,Network.Router.API,Network.Router.API.Pipes,Network.Router.API.Types,Network.Router.API.Util
  build-depends:       async >= 2.1.0, base >= 4.7 && < 5, bytestring, data-default-class, flat, haskell-src-meta,template-haskell, hslogger, pipes, transformers, typed, vector >= 0.11.0.0, websockets
  default-language:    Haskell2010

test-suite router-api-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,typed,hslogger,bytestring,websockets,async >= 2.1.0
                     , router-api
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/tittoassini/router-api
